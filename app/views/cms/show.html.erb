<div class="layout-two-column-left">
  <aside class="sidebar sidebar-green">
    <%= link_to 'Search The Library', root_path, class: 'button button-ghost is-white full-width search-library' %>
    <% @pages.each do |page| %>
    <h2><%= page.title %></h2>
    <div class="wysiwyg"><%= page.body.html_safe %></div>
    <% end %>
  </aside>
  <main class="main-content records">
    <div class="top-links">
      <button class="sidebar-menu"></button>
      <div class="breadcrumbs">
        <%= render_breadcrumbs separator: ' / ' %> / <span><%= @page.title %></span>
      </div>
    </div>
    <header class="page-header">
      <h1><%= @page.title %></h1>
    </header>
    <div class="page-body wysiwyg">
      <%= @page.body.html_safe %>
    </div>
  </main>
</div>
