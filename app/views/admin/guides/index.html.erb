<div class="dashboard">
  <div class="toolbar dashboard-toolbar">
    <h1 class="title">Guides</h1>
    <div class="search">
      <%= form_with url: admin_guides_path, method: :get, local: true do |f| %>
        <%= f.text_field :q, value: params[:q], placeholder: 'Search Guides', class: 'input' %>
        <%= f.submit '', class: 'submit' %>
      <% end %>
    </div>
    <%= link_to 'New Guide', new_admin_guide_path, class: 'button button-solid is-green' %>
  </div>

  <div class="actions">
    <div class="info">
      <%= page_entries_info @search.hits, model: 'guide' %>
      <% if params[:q].present? %>
        <%= link_to 'Reset Search', admin_guides_path, class: 'reset-search' %>
      <% end %>
    </div>
    <div class="pages">
      <%= will_paginate @search.hits, previous_label: '&nbsp;', next_label: '&nbsp;', link_separator: '', inner_window: 2, outer_window: 1 %>
    </div>
  </div>

  <div class="table dashboard-list">
    <%= render partial: 'admin/guides/guide', collection: @guides %>
  </div>
</div>
