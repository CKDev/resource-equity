<%= form_with model: [:admin, @topic], local: true do |f| %>
<div class="dashboard">
  <div class="toolbar dashboard-toolbar">
    <div class="nav">
      <%= render_breadcrumbs %> / <span><%= @topic.title %></span>
    </div>
    <div></div>
    <%= f.submit 'Save', class: 'button button-solid is-green' %>
  </div>

  <div class="dashboard-form">
    <%= render partial: 'admin/topics/form', locals: { f: f } %>
  </div>
</div>
<% end %>
